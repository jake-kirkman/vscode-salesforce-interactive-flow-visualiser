{
  "extends": "../tsconfig-base.json",
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    // noEmit prevents the default tsc from building this--we use webpack instead
    "noEmit": true,
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2019", "dom"],
    "types": ["webpack-env"],
  }
}
